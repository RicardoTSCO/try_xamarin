<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TryXAmarin_v2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Try Xamarin Components" HorizontalTextAlignment="Center" TextColor="White" FontSize="26"/>
        </Frame>
        <StackLayout Padding="10">
            <Button Text="Layouts" x:Name="Layouts" CornerRadius="10" TextColor="White" BackgroundColor="#2196F3"/>
            <Button Text="Pages" x:Name="Pages" Clicked="Pages_Clicked" CornerRadius="10" TextColor="White" BackgroundColor="#2196F3"/>
            <Button Text="Views" x:Name="Views" CornerRadius="10" TextColor="White" BackgroundColor="#2196F3"/>
            <Button Text="Cells" x:Name="Cells" CornerRadius="10" TextColor="White" BackgroundColor="#2196F3"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
