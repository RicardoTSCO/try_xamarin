<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TryXAmarin_v2.Layouts.LayOutContentPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Layout" x:Name="layout" Clicked="layout_Clicked"/>
            <Button Text="Layout v2" x:Name="layoutv2" Clicked="layoutv2_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>